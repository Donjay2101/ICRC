@model IEnumerable<ICRC.Model.Certifications>
@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
            @<div id="balloon" class="balloonClass">
                <b>
                    @Html.ActionLink("Edit", "Edit", new { id = c.ID }, new { @class = "modal_link", @Id = "editlink" })
                </b>
            </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                @<div id="balloon" class="balloonClass">
                                    <b>
                                        <a href="#" onclick="Deleteconfirm('@c.ID')">Delete</a>
                                    </b>
                                </div>);
                        columns.Add(c => c.certificateNo).Titled("Certificate No.");
                        columns.Add(c => c.StartDate).Titled("Start Date");
                        //columns.Add(c => c.productType).Titled("Product Type");
                        columns.Add(c => c.RecertDate).Titled("State Recert. Date");
                        columns.Add(c => c.CertiFicateAccronym).Titled("Certificate");                        


                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()

<script src="~/Scripts/gridmvc.min.js"></script>
