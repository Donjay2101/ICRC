<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IC&RC</title>
    <link rel="icon" type="image/png" href="~/Images/globe.png" />
    @*<script src="" type="text/javascript"></script>*@
    <link href="~/Content/Mysass.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    <script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/modernizr")  
    <script>
        $(function () {
            alert("asdadd");
            debugger;
            var url = document.URL,
            shortUrl = url.substring(0, url.lastIndexOf("/")+1);
            //var last = (shortUrl.substr(href.lastIndexOf('/') + 1))
            //var pgurl = (str.substring(str.lastIndexOf("/");
        $("nav li a").each(function () {
            if ($(this).attr("href") == pgurl || $(this).attr("href") == '')
                $(this).addClass("active-link");
        })
    });
    </script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">  
            @*<img src="~/Images/header.png" />*@          
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="logo">
                        <img src="~/Images/IC_RClogo.png" alt="" id="logo" />
                    </div>
                    @*@Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@             
                </div>
                <div role="navigation" class="signIn pull-right">
                    <a href="" class="linkbtn"><span class="glyphicon glyphicon-user space" aria-hidden="true"></span>Welcome user</a>
                    <a href="" class="linkbtn"><span class="glyphicon glyphicon-off space" aria-hidden="true"></span>Log Out</a>
                </div>              
            </div>
            <div class="menu">
                <div class="container">
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li><a href="/CertifiedPersons/index">Certified Persons</a></li>
