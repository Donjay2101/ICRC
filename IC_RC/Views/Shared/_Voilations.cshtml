@model IEnumerable<ICRC.Model.EthicalVoilations>
@using GridMvc.Html


@Html.Grid(Model).Columns(columns =>
                    {
                        columns.Add()
               .Encoded(false)
               .Sanitized(false)
               .SetWidth(30)
               .Css("hidden-xs") //hide on phones
               .RenderValueAs(c =>
            @<div id="balloon" class="balloonClass">
                <b>
                    @Html.ActionLink("Edit", "Edit", new { id = c.ID }, new { @class = "modal_link", @Id = "editlink" })
                </b>
            </div>);
                        columns.Add()
                                   .Encoded(false)
                                   .Sanitized(false)
                                   .SetWidth(30)
                                   .Css("hidden-xs") //hide on phones
                                   .RenderValueAs(c =>
                                @<div id="balloon" class="balloonClass">
                                    <b>
                                        <a href="#" onclick="Deleteconfirm('@c.ID')">Delete</a>
                                    </b>
                                </div>);
                        columns.Add(c => c.Date).Titled("Date");
                        columns.Add(c => c.EthicalVoilation).Titled("Ethical Voilation");
                        //columns.Add(c => c.productType).Titled("Product Type");
                        columns.Add(c => c.Comments).Titled("Comments");                       


                    }).WithPaging(10).Sortable().Filterable().WithMultipleFilters()

<script src="~/Scripts/gridmvc.min.js"></script>

