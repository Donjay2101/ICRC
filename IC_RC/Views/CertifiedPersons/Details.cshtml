@model ICRC.Model.CertifiedPersons

@{
    ViewBag.Title = "Details";
}

<div class="row">
        <div class="row">
                    @Model.FullName
        </div>

    <div class="row">
        @Model.Address
    </div>
    <div class="row">
        @Model.City ,@Model.State @Model.Zip
    </div>
    <div class="row">
        @Model.Country
    </div>
    <div class="row">
        @Model.Email
    </div>
    <div class="row">
        @Model.Phone
    </div>

</div>
<div class="row">
        <div class="row">
        <a href="#" id="scores">Scores</a>|<a href="#" id="Certificates">Certificates</a>|<a href="#" id="Reciprocity">Reciprocity</a>|<a href="#" id="voilation">Ethical Voilations</a>             
        </div>
           <div class="row" id="ajaxLoad">
                    @Html.Action("Scores")
            </div>
  
</div>

@section script{
    
    <script>
        $(document).on('click', '#candidateNav>li>a', function () {

            var data = $(this).attr('id');

            if(data.toUpperCase()=="SCORES")
            {
                $('#ajaxLoad').load('/CertifiedPersons/Scores');
            }
            else if(data.toUpperCase()=="CERTIFICATIONS")
            {
                $('#ajaxLoad').load('/CertifiedPersons/Certifications');
            }
            else if (data.toUpperCase() == "RECIPROCITY") {
                $('#ajaxLoad').load('/CertifiedPersons/Reciprocity');
            }
            else if (data.toUpperCase() == "VOILATIONS") {
                $('#ajaxLoad').load('/CertifiedPersons/voilations');
            }
        });

    </script>
            
}

